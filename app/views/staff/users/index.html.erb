<% @page_title = "Users" %>

<div class="panel panel-default user listing">

	<div class="panel-heading">
	  <h1><%= @page_title %>

	  <%= link_to("Create New User", new_staff_user_path, :class => 'btn btn-primary pull-right') %>
	  </h1>
	</div>

	<div class="panel-body">

		<div class="pagination">
		  <%= paginate(@users) %>
		</div>

		<table class="table table-striped table-inverse">
		  <thead>
			  <tr>
			    <th class='hidden-xs'>First Name</th>
			    <th class='hidden-xs'>Last Name</th>
			    <th class='hidden-xs'>Email</th>
			    <th>Username</th>
			    <th>Enabled</th>
			    <th>&nbsp;</th>
			    <th>&nbsp;</th>
			  </tr>
		  </thead>
		    <tbody>
			  <% @users.each do |user| %>
				  <tr scope='row'>
				    <td class='hidden-xs'><%= user.first_name %></td>
				    <td class='hidden-xs'><%= user.last_name %></td>
				    <td class='hidden-xs'><%= user.email %></td>
				    <td><%= user.username %></td>
				    <td><%= status_tag(user.enabled) %></td>
				    <td><%= link_to('Edit', edit_staff_user_path(user), :class => 'btn btn-primary') %></td>
				    <td><%= link_to('Delete', delete_staff_user_path(user), :class => 'btn btn-primary') %></td>
				  </tr>
		  	<% end %>
		  </tbody>
		</table>

		<div class="pagination">
		  <%= paginate(@users) %>
		</div>
	</div>
</div>
