<% @page_title = "Events" %>

<div class="panel panel-default event listing">

	<div class="panel-heading">
	  <h1>
	  	<%= @page_title %>
	  </h1>
	</div>

	<div class="panel-body">
		<div class="pagination">
		  <%= paginate(@events) %>
		</div>
			<table class="table table-striped table-inverse">
			  <thead>
				  <tr>
				    <th>Name</th>
				    <th class='hidden-xs'>Website</th>
				    <th class='hidden-xs'>Address</th>
				    <th class='hidden-xs'>Dates</th>
				    <th>&nbsp;</th>
				  </tr>
			  </thead>
			    <tbody>
				  <% @events.each do |event| %>
					  <tr scope='row'>
					    <td><p><%= event.name %></p></td>
					    <td class='hidden-xs'><%= event.website %></td>
					    <td  class='hidden-xs'><%= address_string event %></td>
					    <td class='hidden-xs'>
					    		<time datetime=<%= "#{event.start_date}/#{event.end_date}"%>>
	              		<%= date_span(event.start_date, event.end_date) %>
	            		</time>
	            </td>
	            <td>
	            	<!-- Single button -->
								<div class="btn-group">
								  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								    Actions <span class="caret"></span>
								  </button>
								  <ul class="dropdown-menu">
								    <li><%=  link_to('Show', staff_event_path(event)) %></li>
								    <li><%=  link_to('Merge', merge_staff_event_path(event)) %></li>
								    <li role="separator" class="divider"></li>
								    <li><%=  link_to('Delete', delete_staff_event_path(event)) %></li>
								  </ul>
								</div>
	         		</td>
					  </tr>
			  	<% end %>
			  </tbody>
			</table>
		<div class="pagination">
		  <%= paginate(@events) %>
		</div>
	</div>
</div>
