<% @page_title = "Delete Event: #{@event.name}" %>

<div class="event edit panel panel-default">
  <div class='panel-heading'><h1>
  <%= @page_title %> <%= link_to("&laquo; Back to List".html_safe, staff_events_path, :class => 'back-link pull-right') %>
</h1></div>

  <div class='panel-body'>
    <p>Are you sure you want to <strong>permanently</strong> delete this event?</p>

  <%= form_tag(staff_event_path(@event), :method => :delete) do %>
        <div class="form-actions">
          <%= submit_tag("Update Event", class: 'btn btn-primary') %>
          <%= cancel_button(staff_events_path, class: 'btn btn-primary') %>
        </div>
    <% end %>
  </div>
</div>
