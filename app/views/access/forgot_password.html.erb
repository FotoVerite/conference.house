<% @page_title = 'Forgot Password' %>

<div class="section">

  <div class="column-left">
    <h1 class="page-title">Forgot Password</h1>
  </div>

  <div class="column-right">
    <%= render(:partial => 'layouts/flash_messages') %>

    <%= form_tag(send_reset_password_path, :method => :patch, :class => 'take-focus') do %>
      <div class="column">
        <p>Please enter the email address you registered and instructions for resetting your password will be sent to you.</p>
        <p>
          <%= label_tag(:email, "Registered Email") %>
          <%= email_field_tag(:email) %>
        </p>
        <p><%= submit_tag('Send Email', :class => 'large-light-button') %></p>
      </div>
    <% end %>
  </div>

</div>
