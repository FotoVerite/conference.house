<% @page_title = "Log in" %>

<div class="section log-in">

  <div class="column-left">
    <h1 class="page-title">Log In / Register</h1>
  </div>

  <div class="column-right">
    <%= render(:partial => 'layouts/flash_messages') %>
    <%= form_tag(access_path, :class => 'take-focus') do %>
     <div class="form-group">
        <%= label_tag :auth_param, 'Email/Username', nil %>
        <%= text_field_tag :auth_param, nil, placeholder: 'Email/Username', class: 'form-control'
        %>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password'
        %>
      </div>
      <div class="form-actions">
        <%= submit_tag("Log In", :class => 'btn btn-primary') %>
        <%= link_to("Signup", new_user_path, :class => 'btn btn-primary') %>
      </div>
       <%= link_to('Forgot Password', forgot_password_path, :class => 'large-light-button', :id => 'forgot-password-button') %>
    <% end %>
  </div>
</div>
